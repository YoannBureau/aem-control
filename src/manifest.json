{
    "manifest_version": 2,
    "name": "AEM Control",
    "description": "This extension ...",
    "version": "1.0",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "declarativeContent",
        "tabs",
        "activeTab"
    ],
    "icons": {
        "16": "aem.png",
        "32": "aem.png",
        "48": "aem.png",
        "128": "aem.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}